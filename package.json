{
  "name": "grapher",
  "version": "1.0.0",
  "description": "Mathematical function visualizer with Python backend and D3.js frontend",
  "scripts": {
    "start": "python start_server.py",
    "start:backend": "python start_backend.py",
    "test:frontend": "jest backend/tests/test_frontend_unit_tests.js",
    "test:backend": "cd backend && python -m pytest tests/ -v",
    "test": "npm run test:backend && npm run test:frontend",
    "test:coverage": "npm run test:backend && npm run test:frontend --coverage",
    "install:dev": "pip install -r backend/requirements.txt && npm install"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js",
      "**/test_*.js"
    ],
    "collectCoverageFrom": [
      "backend/src/static/js/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 10000,
    "verbose": true
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0"
  }
}
